<script src="/js/index.js" defer></script>
<main>
  <h1>Orders</h1>
  <input type="text" placeholder="Enter customer name" id="customerName"/> <button id="search">ðŸ”Ž</button>
  <div id="orders">
    <div class="order-col">
      <h2 class="black-white">RECEIVED</h2>
      {{#if received}}
      {{#each received}}
      <div class="order-card">
        <a href="#">
          <h3>{{customer}}</h3>
          <p>{{timestamp}}</p>
          <ul>
            {{#each items}}
            <li>
              <h4>{{quantity}}</h4>
              <p>&nbsp;x {{item.name}}</p>
              </p>
            </li>
            {{/each}}
          </ul>
        </a>
      </div>
      <hr />
      {{/each}}
      {{else}}
      <h3>NO RECORD</h3>
      {{/if}}
    </div>

    <div class="order-col">
      <h2 class="white-black">READY FOR DELIVERY</h2>
      {{#if readyForDelivery}}
      {{#each readyForDelivery}}
      <div class="order-card">
        <a href="#">
          <h3>{{customer}}</h3>
          <p>{{timestamp}}</p>
          <ul>
            {{#each items}}
            <li>
              <h4>{{quantity}}</h4>
              <p>&nbsp;x {{item.name}}</p>
              </p>
            </li>
            {{/each}}
          </ul>
        </a>
      </div>
      <hr />
      {{/each}}
      {{else}}
      <h3>NO RECORD</h3>
      {{/if}}
    </div>

    <div class="order-col">
      <h2 class="orange-white">IN TRANSIT</h2>
      {{#if inTransit}}
      {{#each inTransit}}
      <div class="order-card">
        <a href="#">
          <h3>{{customer}}</h3>
          <p>{{timestamp}}</p>
          <ul>
            {{#each items}}
            <li>
              <h4>{{quantity}}</h4>
              <p>&nbsp;x {{item.name}}</p>
              </p>
            </li>
            {{/each}}
          </ul>
        </a>
      </div>
      <hr />
      {{/each}}
      {{else}}
      <h3>NO RECORD</h3>
      {{/if}}
    </div>
  </div>
</main>